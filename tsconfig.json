{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2019",
    "outDir": "dist",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "declaration": true,
    "declarationMap": false,
    "esModuleInterop": false,
    "removeComments": true,
    "lib": [
      "ES2019"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src",
    "index.d.ts"
  ]
}
